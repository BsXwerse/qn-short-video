{
	"$schema": "https://biomejs.dev/schemas/1.8.0/schema.json",
	"organizeImports": { "enabled": true },
	"files": {
		"ignore": ["node_modules/**", "dist/**", ".next/**"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"suspicious": { "noExplicitAny": "off" },
			"complexity": { "useLiteralKeys": "off" },
			"a11y": {
				"useButtonType": "off",
				"useKeyWithClickEvents": "off",
				"useMediaCaption": "off"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "single"
		}
	}
}
